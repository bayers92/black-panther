<% provide(:title, @user.name) %>

<% if signed_in? && current_user?(@user) %>
  <div class = "profile">
    <h1>
      <div class = "name" >
        <%= @user.name %>
      </div>
    </h1>
    <h3>
      <div class = "creds">
        <%= @user.company %>, <%= @user.title %>
      </div>
    </h3>
    <div class = "edit">
        <%= link_to "Edit Profile", edit_user_path(current_user) %>
    </div>
  </div>

<% else %>
  <div class = "profile">
    <h1>
      <div class = "name" >
          <%= @user.name %>
      </div>
    </h1>
    <h3>
      <div class = "creds">
          <%= @user.company %>, <%= @user.title %>
      </div>
    </h3>
    <div class = "listings">
      <div class ="heading">
        Articles by this author ( <%= @microposts.count %>  total )
      </div>
      <% if @user.microposts.any? %>
        <%= render partial: 'shared/micropost', collection: @microposts %>
      <% else %>
        No articles written yet.
      <% end %>
    </div>
  </div>
<% end %>