
<% if @past_url && @past_url.include?("?") %>
	<% length = @past_url.size() %>
	<% position = @past_url.index('?') %>
	<% @ending = @past_url.slice(position..length) %>
<% end %>

<div class="entry">
	<a href="/microposts/<%= micropost.id %><%= @ending %>" class="entry">
	  <div class="entry_title"><%= micropost.title %></div>
	  <div class="entry_author"><%= micropost.author %></div>
	</a>
</div>
