<% if micropost.publish? %>
	<div class="post">
		<a href="/microposts/<%= micropost.slug %><%= @ending %>" class="profile_post">
		 	<div class="title"><%= micropost.title %></div>
		 	<div class="subtitle"> <%= micropost.subtitle %></div>
		 	<div class="date"> <%= micropost.updated_at.strftime("%B %d, %Y") %></div> 
		</a>
	</div>
<% else %>
	<div class="post">
		<a href="/microposts/<%= micropost.slug %>/edit<%= @ending %>" class="profile_post">
		 	<div class="title"><%= micropost.title %></div>
		 	<div class="subtitle"> <%= micropost.subtitle %></div>
		 	<div class="date"> <%= micropost.updated_at.strftime("%B %d, %Y") %></div> 
		</a>
	</div>
<% end %>

