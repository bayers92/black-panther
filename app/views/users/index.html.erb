<% provide(:title, 'All users') %>
<% @past_url =  request.url %>


<div class = "index">
	<div class = "writers" id = "writers">
	</div>
	<div class = "allTopics" id = "allTopics">
	</div>
      <div class ="buttonsIndex">
        <div class="switchContainer">
          <div class="switch">
            <input type="radio" class="switch-input" name="view" value="authorIndex" id="authorIndex" checked>
            <label for="authorIndex" class="switch-label switch-label-off">Authors</label>
            <input type="radio" class="switch-input" name="view" value="topicIndex" id="topicIndex">
            <label for="topicIndex" class="switch-label switch-label-on">Topics</label>
            <span class="switch-selection"></span>
          </div>
        </div>
        <div class = "filler">
          <p></p>
        </div>
    </div>
	<div class = "userIndex" id="userIndex">
		<div class = "userTitle">
			<h1>Writers</h1>
		</div>
		<ul class="users">
			<%= render @users.where(:author => true) %>  
		</ul>
	</div>

	<div class = "topicsIndex" id="topicsIndex">
		<div class = "topicsHeader">
			<div class = "topicsTitle">
				<h1>Topics</h1>
			</div>
			<div class = "topicsInfo">
				<h5> visit an author's profile to create a new topic </h5>
			</div>
		</div>
		<%= render partial: 'shared/comment', collection: @comments %>
	</div>
</div>