<!DOCTYPE html>
<html>
	<head>
	  <title><%= full_title(yield(:title)) %></title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	  <%= render 'layouts/shim' %>
	<% if @past_url && @past_url.include?("?") %>
		<% length = @past_url.size() %>
		<% position = @past_url.index('?') %>
		<% @ending = @past_url.slice(position..length) %>
	<% end %>
	<script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
	</head>
	<body onunload="">
		<script type="text/javascript">
		    alert('first load / reload');
		    window.onload = function(){alert('onload')};
		</script>
		<div class="container">
		  	<div class="sixteen columns">
		  		<div class ="nonFooter">
				    <div class="one-third column alpha">
				      	<div class="nav">
				      		<%= render 'layouts/logo' %>
				        	<div id="postswrapper">
				        		<% @entries = Micropost.where(:publish => true).paginate(:page => params[:page], :per_page => 6) %>
				        			<%= render @entries %>
				        	</div>
				      		<%= paginate @entries %>
				      	</div>
				    </div>

				    <div class="two-thirds column omega">
					    <div class="yield" id = "yield">

					      	<% flash.each do |key, value| %>
			        			<div class="alert alert-<%= key %>"><%= value %></div>
			      			<% end %>

					      	<%= yield %>

					    </div>
				    </div>
			 	</div>

				<%= render 'layouts/footer' %>
			</div>
		</div>
	</body>
</html>
